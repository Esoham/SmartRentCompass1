@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SmartRentCompass.BlazorApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <base href="~/" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="SmartRentCompass - Find the best apartment deals tailored to your needs." />
    <meta name="keywords" content="apartment, rent, deals, real estate, SmartRentCompass" />
    <meta property="og:title" content="SmartRentCompass" />
    <meta property="og:description" content="Find the best apartment deals with SmartRentCompass." />
    <meta property="og:type" content="website" />
    <link href="css/site.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            <p>An error has occurred. This application may no longer respond until reloaded.</p>
        </environment>
        <environment include="Development">
            <p>An unhandled exception has occurred. See browser dev tools for details.</p>
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>

<style>
    #blazor-error-ui {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        background-color: #f8d7da;
        color: #721c24;
        text-align: center;
        padding: 10px;
        border-top: 1px solid #f5c6cb;
    }

        #blazor-error-ui p {
            margin: 0;
            font-size: 1em;
        }

        #blazor-error-ui .reload,
        #blazor-error-ui .dismiss {
            margin-left: 10px;
            font-weight: bold;
            color: #721c24;
            text-decoration: underline;
            cursor: pointer;
        }
</style>